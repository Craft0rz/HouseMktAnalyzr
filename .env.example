# HouseMktAnalyzr Configuration
# Copy this file to .env and fill in your values
# All variables are prefixed with HOUSEMKT_

# =============================================================================
# Target Market Settings
# =============================================================================

# Target region for property analysis (default: montreal)
HOUSEMKT_REGION=montreal

# Price range for property search in CAD
HOUSEMKT_MIN_PRICE=200000
HOUSEMKT_MAX_PRICE=2000000

# Property types to analyze (comma-separated)
# Options: HOUSE, DUPLEX, TRIPLEX, QUADPLEX, MULTIPLEX
HOUSEMKT_PROPERTY_TYPES=["DUPLEX", "TRIPLEX", "QUADPLEX", "MULTIPLEX"]

# Minimum number of units (1 for single-family, 2+ for income properties)
HOUSEMKT_MIN_UNITS=2

# =============================================================================
# Investment Criteria
# =============================================================================

# Minimum gross rental yield percentage (annual rent / price * 100)
HOUSEMKT_TARGET_YIELD=5.0

# Minimum cap rate percentage (NOI / price * 100)
HOUSEMKT_TARGET_CAP_RATE=4.0

# =============================================================================
# API Keys
# =============================================================================

# Centris API key (if available)
HOUSEMKT_CENTRIS_API_KEY=

# Realtor.ca API key (if available)
HOUSEMKT_REALTOR_API_KEY=

# =============================================================================
# Data Paths
# =============================================================================

# Directory for storing property data
HOUSEMKT_DATA_DIR=data

# Directory for caching API responses
HOUSEMKT_CACHE_DIR=.cache
